//- Add the CoderDojo branding bar
mixin bar
	div(
		class=[
						"row",
						"cd-bar"
					]
	)
		div()

//- Add the CoderDojo logo
mixin cd_logo
	img(
		src="#{ assets.coderdojo_logo.path }",
		alt="#{ assets.coderdojo_logo.description }"
	)&attributes(attributes)

//- Get the correct language title
mixin lang_name
	if language == "php"
		| PHP
	else if language == "javascript"
		| JavaScript
	else if language == "html"
		| HTML
	else
		| #{ language }
